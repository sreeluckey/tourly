<% layout('layouts/boilerplate')%>
<div id="cluster-map" class = " w-50 container-fluid rounded"></div>
<div class="container">
    <h1>All Destinations</h1>

    <% for (let Destination of Destinations){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(Destination.images.length) {%>
                <img class="img-fluid" alt="" src="<%=Destination.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dhr5ru0cw/image/upload/v1658725038/Tourly/wp6629523_njfo5f.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= Destination.title %> </h5>

                    <p class="card-text"><%= Destination.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= Destination.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/Destinations/<%=Destination._id%>">View <%=Destination.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const Destinations = { features: <%- JSON.stringify(Destinations) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>